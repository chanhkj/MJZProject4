<h2> Hello <%=user.local.name%> </h2>
<br>

<body class="container">

<form class = "editUserDetails">

  <div class="form-group">
    <label for="name"> Name </label>
    <input type="text" class="form-control" id="name" value = "<%=user.local.name%>" name="user[name]">
  </div>

  <div class="form-group">
    <label for="email"> Email</label>
    <input type="text" class="form-control" id="email" value = "<%=user.local.email%>" name="user[email]">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" value = "******" name="user[password]">
  </div>

  <input type="submit" value = "Save" id = "saveUserDetails" class="btn btn-success">
  <input type="submit" value = "Cancel" id = "cancelSaveUserDetails" class="btn btn-info" >
</form>

</body>
