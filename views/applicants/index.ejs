<div class="container">
 <table class="table table-hover">
   <thead>
     <tr>
       <th>TITLE</th>
       <%# <th>EXPIRED</th>%>
       <th>POST DATE</th>
       <th>FILLED</th>
     </tr>
   </thead>
   <tbody>
     <% joblist.forEach(function(job) { %>
     <tr>
       <td>
         <a href="/joblists/<%=job.id%>"> <%= job.title %>  </a><br>
         <%= job.description %>
       </td>

       <td><%= job.postDate %></td>
       <td><%= job.filled %></td>
         <td> <a href='/applicants/applicationForms/<%= job.id%>'><input type ="submit" action = "/applicants/applicationForms/<%= job.id%>" value = "Apply" id="viewapplicants" class="btn btn-primary navigation"></a> </td>
     </tr>
     <% }) %>
   </tbody>
 </table>
 </div>
