

<h1>Applicants Apply Page</h1>

<div class="container">
<form action="/applicants/applicationForms/<%=foundJoblist.id%>" method="POST" class="form-action">
  <div class="form-group" class="text-center">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="applicant-name" name="applicant[name]" placeholder="Jane Doe" required>
  </div>
  <div class="form-group" class="text-center">
    <label for="contact">Contact</label>
    <input type="text" class="form-control" id="applicant-contact" name="applicant[contact]" placeholder="88888888" required>
  </div>
  <div class="form-group" class="text-center">
    <label for="email">Email</label>
    <input type="text" class="form-control" id="applicant-email" name="applicant[email]" placeholder="text@gmail.com" required>
  </div>
  <div class="form-group" class="text-center">
    <label for="experience">Experience</label>
    <input type="number" class="form-control" id="applicant-experience" name="applicant[experience]" placeholder="5" required>
  </div>
  <div class="form-group" class="text-center">
    <label for="education">Education</label>
      <select type="text" class="form-control" id="applicant-education" name="applicant[education]" required>
        <option value="diploma">Diploma</option>
        <option value="bachelor">Bachelor</option>
        <option value="master">Master</option>
        <option value="phd">Phd</option>
      </select>
  </div>
  <div class="form-group" class="text-center">
    <label for="age">Age</label>
    <input type="number" class="form-control" id="applicant-age" name="applicant[age]" placeholder="25" required>
  </div>

  <div class="control-group" class="text-center">
    <label class="control-label" for="gender">Gender</label>
    <div class="controls">
        <label class="radio inline" for="gender-0">
          <input name="applicant[gender]" id="gender-0" value="Male" checked="checked" type="radio">
          Male
        </label>
      <label class="radio inline" for="gender-1">
        <input name="applicant[gender]" id="gender-1" value="Female" type="radio">
        Female
      </label>
    </div>
  </div>
  <div class="form-group" class="text-center">
    <label for="expectedPay">Expected Pay</label>
    <input type="text" class="form-control" id="applicant-pay" name="applicant[expectedPay]" placeholder="1000">
  </div>
  <div class="form-group" class="text-center">
    <label for="experience">Skills</label>
    <input type="text" name="applicant[skills]" placeholder="">
  </div>
  <div class="form-group" class="text-center">
    <label for="exampleTextarea">Bio (not more than 250 characters)</label>
    <textarea class="form-control" id="exampleTextarea" rows="3" name = "applicant[bioText]" maxlength="250"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Apply</button>
</form>
</div>
