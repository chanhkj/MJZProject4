<div class="text-center">
<h2>Edit your joblist here!</h2>
<form action="/joblists/<%= joblist.id %>/edit" method="POST">
  <div class="form-group" class="text-center">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="items" name = "joblist[title]" placeholder="Title" value = "<%=joblist.title%>">
  </div>
  <div class="form-group">
    <label for="exampleTextarea">Description</label>
    <textarea class="form-control" id="exampleTextarea" rows="3" name = "joblist[description]" ><%=joblist.description%></textarea>
  </div>
  <div>
      <input type="submit" value="Save">

  </div>
  <a href="/joblists/<%=joblist.id%>">Cancel and go back</a>
</form>
</div>
